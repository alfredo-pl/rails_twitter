<h1>Tweets</h1>

<div class="row">
<div class="col-3"></div>

<div class="col-6">
  <% if current_user %>
    <div class="card my-2 p-2">
      <%= render 'form', tweet: @tweet %>
    </div>
  <% @tweets.each do |tweet| %>
      <div class="card my-2 p-2">
        <div class="row ">
          <div class="col-2">
            <img src="<%= tweet.photo_user %>"class="w-75 rounded-circle"/>
          </div>
          <div class="col-9">
            <p><strong class="me-2">@<%= tweet.name_user %></strong><%= tweet.content %></p>
          </div>

          <% if current_user && current_user.id == tweet.user_id %>
            <div class="col-1">
              <ul class="navbar-nav me-5">
                <li class="nav-item">
                  <a class="nav-link" href="#" id="navbarDropdownTweet" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-ellipsis-h"></i>
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdownTweet">
                    <li> <%= link_to 'Show', tweet , class:"dropdown-item"%></li>
                    <li><%= link_to 'Edit', edit_tweet_path(tweet), class:"dropdown-item" %></li>
                    <li><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:"dropdown-item" %> </li>
                  </ul>
                </li>
              </ul>
            </div>
          <% end %>
          <% if tweet.perfil_retweet%>
          <div class="card p-4 m-auto w-75">
            <div class="row">
              <div class="col-2">
               <img src=" <%= tweet.perfil_retweet%>"class="w-75 rounded-circle"/>
              </div>
              <div class="col-10">
                <p><strong class="me-2">@<%= tweet.perfil_retweet_name %></strong><%= tweet.perfil_retweet_content %></p>
              </div>
            </div>
          </div>
        <% end %>
        <!--END DEL RETWEET-->
      
        <div class="d-flex align-items-end justify-content-around pt-3">
        
            <% pre_like = tweet.likes.find { |like| like.user_id == current_user.id} %>
              
              <% if pre_like %>
                <%= link_to(tweet_like_path(tweet.id, pre_like),method: :delete)do%> <i class="fas fa-heart"></i><% end %>
              <% else %>
                <%= link_to(tweet_likes_path(tweet.id), method: :post)do%><i class="far fa-heart"></i><% end %>
              <% end %>
              <% pre = tweet.id %>
              <%= tweet.likes.count %> <%= (tweet.likes.count) == 1 ? 'Like' : 'Likes'%>
              
              
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Retweet
              </button>
               <!--RESOLVER PROBLEMA CON EL ID PARA EL TWEET ORIGINAL-->
              <%= render 'retweet', original: pre %>
              <!--retweet con el mismo contenido-->
              <%= link_to 'Retweet', retweet_tweet_path(tweet.id), method: :post %>
               <%= tweet.retweets.count %> <%= (tweet.retweets.count) == 1 ? 'Retweet' : 'Retweet'%>   
              <%=time_ago_in_words(tweet.created_at)%>
          </div>
        <!--END DEL CLASS FLEX-->
        </div>
      <!--END DEL ROW-->
      </div>
  <!--END DEL CARD-->
    <% end %>
    
    <!--END DEL EACH TWEETS-->

    <!--SI EL USUARIO NO ESTA LOGEADO-->
    <% else %>
        <% @tweets.each do |tweet| %>
            <div class="card my-2 p-2">
            <div class="row ">
              <div class="col-2">
                <img src="<%= tweet.photo_user %>"class="w-75 rounded-circle"/>
              </div>
              <div class="col-10">
                <p><%= tweet.content %></p>
              </div>
              <div class="d-flex align-items-end justify-content-around pt-3">
              
                <% if current_user && current_user.id == tweet.user_id %>
                  <%= link_to 'Show', tweet %>
                  <%= link_to 'Edit', edit_tweet_path(tweet) %>
                  <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %> 
                <% elsif current_user %>
                  <%= link_to 'Show', tweet %>
                <% else %>
                  <%= link_to 'Show', tweet %>
                <% end %>
              </div>
            </div>
            </div>
            <% end %>
             <!--END DEL EACH TWEETS-->
      <% end %>
       <!--END DEL IF PRINCIPAL-->
    </div>
     <!--END DEL COL-6-->
<div class="col-3"></div>


</div>
<%= paginate @tweets %>
 <!--END DEL ROW PRINCIPAL-->
<br>

