<h1>Tweets</h1>

<div class="row">
<div class="col-4"></div>

<div class="col-4">
<% if current_user %>
  <div class="card my-2 p-2">
  <%= render 'form', tweet: @tweet %>
</div>
  <% @tweets.each do |tweet| %>
      <div class="card my-2 p-2">
      <div class="row ">
        <div class="col-2">
          <img src="<%= tweet.photo_user %>"class="w-75 rounded-circle"/>
        </div>
        <div class="col-10">
          <p><%= tweet.content %></p>
        </div>
        <div class="d-flex align-items-end justify-content-around pt-3">
           <% if current_user && current_user.id == tweet.user_id %>
            <%= link_to 'Show', tweet %>
            <%= link_to 'Edit', edit_tweet_path(tweet) %>
            <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %> 
          <% elsif current_user %>
            <%= link_to 'Show', tweet %>
          <% else %>
            <%= link_to 'Show', tweet %>
          <% end %>
        </div>
      </div>
      </div>
        <!--<td><%= tweet.user_id %></td>
        <td><%= tweet.tweet_id %></td>-->
    <% end %>
    <% else %>
  <% @tweets.each do |tweet| %>
      <div class="card my-2 p-2">
      <div class="row ">
        <div class="col-2">
          <img src="<%= tweet.photo_user %>"class="w-75 rounded-circle"/>
        </div>
        <div class="col-10">
          <p><%= tweet.content %></p>
        </div>
        <div class="d-flex align-items-end justify-content-around pt-3">
        
          <% if current_user && current_user.id == tweet.user_id %>
            <%= link_to 'Show', tweet %>
            <%= link_to 'Edit', edit_tweet_path(tweet) %>
            <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %> 
          <% elsif current_user %>
            <%= link_to 'Show', tweet %>
          <% else %>
            <%= link_to 'Show', tweet %>
          <% end %>
        </div>
      </div>
      </div>
        <!--<td><%= tweet.user_id %></td>
        <td><%= tweet.tweet_id %></td>-->
      <% end %>
<% end %>
</div>
<div class="col-4"></div>
</div>
